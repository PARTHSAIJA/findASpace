<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.findaspace.findaspace.main.rooms_detail.RoomDetailActivity">

    <TextView
        android:id="@+id/room_detail_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_unit_no_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/room_detail_name_tv" />

    <TextView
        android:id="@+id/room_max_cap_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/room_unit_no_tv" />

    <TextView
        android:id="@+id/room_open_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/room_max_cap_tv" />

    <TextView
        android:id="@+id/room_close_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/room_open_time_tv" />

    <TextView
        android:id="@+id/room_block_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/room_block_switch"
        app:layout_constraintTop_toBottomOf="@id/room_close_time_tv" />

    <Switch
        android:id="@+id/room_block_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/room_block_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/room_block_tv" />

    <!-- 房间人数 -->
    <TextView
        android:id="@+id/room_person_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/room_block_tv" />

    <Button
        android:id="@+id/room_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:textAllCaps="false"
        android:textColor="@color/colorBlue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>
